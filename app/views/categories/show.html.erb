<h1>Jobs in the <%= @category.name %></h1>

<% if @jobs.length > 0 %>
  <table>
    <thead>
      <tr>
        <th>Type</th>
        <th>Company</th>
        <th>Position</th>
        <th>Location</th>
        <th>Posted at</th>
        <th>Expires at</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @jobs.each do |job| %>
        <tr>
          <td><%= Job::EMPLOYMENT_TYPES.key(job.employment_type) %></td>
          <td><%= link_to job.company, job.url, { target: '_blank' } %></td>
          <td><%= job.position %></td>
          <td><%= job.location %></td>
          <td><%= job.created_at.strftime('%Y-%m-%d') %></td>
          <td><%= job.expires_at.strftime('%Y-%m-%d') %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>There is no jobs for the category "<%= @category.name %>".</p>
<% end %>

<%= link_to 'View all jobs', jobs_path %>
