<h1>Become an Affiliate</h1>

<%= form_for(@affiliate) do |f| %>
  <% if @affiliate.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@affiliate.errors.count, "error") %> prohibited this affiliate from being saved:</h2>

      <ul>
      <% @affiliate.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
    <div class="field">
      <%= f.label :email %> <span class="required">*</span><br>
      <%= f.text_field :email, size: 35, class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label :url, "URL" %><br>
      <%= f.text_field :url, size: 35, class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label :categories %> <span class="required">*</span><br>
      <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |c| %>
        <div class="collection-check-box">
          <%= c.check_box %>
          <%= c.label %>
        </div>
      <% end %>
    </div>

    <div class="actions">
      <%= f.submit "Submit", class: "btn btn-primary btn-lg" %>
    </div>
  </div>
<% end %>
