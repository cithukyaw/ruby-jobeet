<h1>Listing jobs</h1>

<table>
  <thead>
    <tr>
      <th>Category</th>
      <th>Type</th>
      <th>Company</th>
      <th>Url</th>
      <th>Position</th>
      <th>Location</th>
      <th>Posted at</th>
      <th>Expires at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.category.name %></td>
        <td><%= job.employment_type %></td>
        <td><%= job.company %></td>
        <td><%= job.url %></td>
        <td><%= job.position %></td>
        <td><%= job.location %></td>
        <td><%= job.created_at.strftime('%Y-%m-%d') %></td>
        <td><%= job.expires_at.strftime('%Y-%m-%d') %></td>
        <td><%= link_to 'Show', job %></td>
        <td><%= link_to 'Edit', edit_job_path(job) %></td>
        <td><%= link_to 'Delete', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

