<%= form_for(@job) do |f| %>
  <% if @job.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@job.errors.count, "error") %> prohibited this job from being saved:</h2>

      <ul>
      <% @job.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :category_id %><br>
    <%= f.collection_select :category_id, Category.all, :id, :name, prompt: true  %>
  </div>

  <div class="field">
    <%= f.label :type %><br>
    <%= f.text_field :type %>
  </div>

  <div class="field">
    <%= f.label :company %><br>
    <%= f.text_field :company %>
  </div>

  <div class="field">
    <%= f.label :logo %><br>
    <%= f.text_field :logo %>
  </div>

  <div class="field">
    <%= f.label :url %><br>
    <%= f.text_field :url %>
  </div>

  <div class="field">
    <%= f.label :position %><br>
    <%= f.text_field :position %>
  </div>

  <div class="field">
    <%= f.label :location %><br>
    <%= f.text_field :location %>
  </div>

  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :how_to_apply %>?<br>
    <%= f.text_field :how_to_apply %>
  </div>

  <div class="field">
    <%= f.label :token %><br>
    <%= f.text_field :token %>
  </div>

  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>

  <div class="field">
    <%= f.label :expires_at %><br>
    <%= f.datetime_select :expires_at %>
  </div>

  <div class="field">
    <%= f.check_box :is_public %>
    <%= f.label :is_public %>?<br>
    Whether the job can also be published on affiliate websites or not.
  </div>

  <div class="field">
    <%= f.check_box :is_activated %>
    <%= f.label :is_activated %>?
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
